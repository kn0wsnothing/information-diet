// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum SourceType {
  READWISE
  RSS
}

enum MacroType {
  SNACK
  MEAL
  TIME_TESTED
}

enum ContentType {
  SPRINT    // 2-5 min quick reads
  SESSION   // 15-45 min focused reads
  JOURNEY   // Hours/days deep reading
}

enum ItemStatus {
  QUEUED
  READING
  DONE
  ARCHIVED
}

enum CompletionMethod {
  READWISE
  SELF_REPORT
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Onboarding tracking
  onboardingCompleted Boolean @default(false)
  onboardingStep      Int?    @default(0)
  onboardingSkipped   Boolean @default(false)

  sources   Source[]
  items     Item[]
}

model Source {
  id        String     @id @default(cuid())
  userId    String
  type      SourceType
  name      String?

  // READWISE
  readwiseToken String?

  // RSS
  feedUrl   String?

  lastSyncedAt DateTime?

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     Item[]

  @@index([userId, type])
}

model Item {
  id        String     @id @default(cuid())
  userId    String
  sourceId  String?

  title     String
  url       String?
  author    String?
  publishedDate DateTime?

  macro       MacroType?    // @deprecated - kept for backward compatibility during transition
  contentType ContentType @default(SESSION) // New time investment type
  status      ItemStatus @default(QUEUED)

  readwiseDocumentId String?
  readwiseLocation   String?

  completedAt DateTime?
  completionMethod CompletionMethod?
  
  timeSpentMinutes Int? @default(0)

  // Progress tracking fields
  currentPage    Int?    @default(0)      // Current page number
  totalPages     Int?                     // Total pages from Open Library
  readingStartedAt DateTime?              // When user started reading
  lastReadAt     DateTime?                // Last reading session
  readingStreak  Int?     @default(0)     // Consecutive days reading
  dailySessions  Int?     @default(0)     // Sessions completed today

  // Book metadata from Open Library
  coverUrl       String?                  // Cover image URL
  openLibraryId  String?                  // Open Library ID for reading link
  isbn           String?                  // ISBN number

  // Time estimation and progress mode
  estimatedMinutes Int?                   // Auto-calculated from pages/words
  progressMode     String? @default("pages") // "pages" | "sessions" | null
  wordCount        Int?                    // For articles/newsletters

  // AI Summary fields
  aiSummary            String?              // AI-generated "why you should read this"
  aiSummaryGeneratedAt DateTime?            // When the summary was generated (for cache invalidation)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  source    Source?   @relation(fields: [sourceId], references: [id], onDelete: SetNull)
  sessions  ReadingSession[]

  @@index([userId, status])
  @@index([userId, macro])
  @@index([readwiseDocumentId])
  @@unique([userId, readwiseDocumentId])
}

model ReadingSession {
  id        String   @id @default(cuid())
  itemId    String
  minutesSpent Int    @default(15)        // Default 15-minute session
  pagesRead Int?
  date      DateTime @default(now())
  
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  @@index([itemId, date])
}
